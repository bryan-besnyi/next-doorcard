// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(cuid())
  name           String?
  email          String          @unique
  password       String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  doorcards      Doorcard[]
  doorcardDrafts DoorcardDraft[]
}

model Doorcard {
  id           String   @id @default(cuid())
  name         String
  doorcardName String
  officeNumber String
  term         String
  year         String
  timeBlocks   Json
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String
  user         User     @relation(fields: [userId], references: [id])
}

model DoorcardDraft {
  id          String   @id @default(cuid())
  userId      String
  data        Json
  lastUpdated DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])

  @@unique([userId, id])
  @@index([userId])
}
